from machine import Pin as pin
from utime import sleep, sleep_ms as pausa

led1=pin(12,pin.OUT) 
led2=pin(14,pin.OUT) 
led3=pin(27,pin.OUT) 
led4=pin(26,pin.OUT) 
led5=pin(25,pin.OUT) 
led6=pin(33,pin.OUT) 
led7=pin(23,pin.OUT) 
led8=pin(22,pin.OUT) 
