Mess=pin(19,pin.IN)
pausa = 0.4

todos=[led1,led2,led3,led4,led5,led6,led7,led8]

def codigo1():
    for elemento in todos:
        elemento.value(1)
        pausa(100)
        elemento.value(0)
        pausa(50)
    for elemento in reversed(todos):
        elemento.value(1)
        pausa(50)
        elemento.value(0)
        pausa(50) 
        
def codigo2():
    for i in todos:
        for j in range (4):
            i.value(not i.value())
            pausa(150)
    for i in reversed(todos):
        for j in range (4):
            i.value(not i.value())
            pausa(150)
            
