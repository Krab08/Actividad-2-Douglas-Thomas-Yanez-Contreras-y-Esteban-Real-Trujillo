def print_led(a,b,c,d,e,f,g,h):
        led1.value(a) 
        led2.value(b)
        led3.value(c)
        led4.value(d)
        led5.value(e)
        led6.value(f)
        led7.value(g)
        led8.value(h)
        sleep(pausa)
        
def secuencia5():
    for i in range(1,5):
        LedsHumildes=[led2,led7]
        LedsArrog=[led1,led10]
        LedsCurio=[led3,led6]
        LedsSap=[led4,led9]
        LedsWat=[led5,led8]
        
        for Hleds in LedsHumildes:
            Hleds.value(0)
            sleep(pausam)
            Hleds.value(1)
            sleep(pausa)
            Hleds.value(0)
            sleep(pausam)
            
        for Aleds in LedsArrog:
            Aleds.value(0)
            sleep(pausam)
            Aleds.value(1)
            sleep(pausa)
            Aleds.value(0)
            sleep(pausam)
        
        for Cleds in LedsCurio:
            Cleds.value(0)
            sleep(pausam)
            Cleds.value(1)
            sleep(pausa)
            Cleds.value(0)
            sleep(pausam)
            
        for Sleds in LedsSap:
            Sleds.value(0)
            sleep(pausam)
            Sleds.value(1)
            sleep(pausa)
            Sleds.value(0)
            sleep(pausam)
            
        for Wleds in LedsWat:
            Wleds.value(0)
            sleep(pausam)
            Wleds.value(1)
            sleep(pausa)
            Wleds.value(0)
            sleep(pausam)       
        

